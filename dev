spring.env=dev
# ------------------ Database Config ------------------
spring.datasource.username=root
spring.datasource.password=root
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.datasource.url=jdbc:mysql://localhost:3306/currencydb

spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# ------------------ Server Config ------------------
server.port=8090

# ------------------ Eureka Config ------------------
# Enable Eureka client (it must register with Eureka server)
eureka.client.enabled=true
eureka.client.service-url.defaultZone=http://localhost:8761/eureka/
eureka.instance.hostname=localhost
eureka.instance.prefer-ip-address=true

# ------------------ Resilience4j Circuit Breaker ------------------
resilience4j.circuitbreaker.instances.myCircuitBreaker.sliding-window-size=10
resilience4j.circuitbreaker.instances.myCircuitBreaker.minimum-number-of-calls=5
resilience4j.circuitbreaker.instances.myCircuitBreaker.wait-duration-in-open-state=10s
resilience4j.circuitbreaker.instances.myCircuitBreaker.automatic-transition-from-open-to-half-open-enabled=true
resilience4j.circuitbreaker.instances.myCircuitBreaker.failure-rate-threshold=50

# ------------------ Actuator and Info ------------------
management.info.env.enabled=true
management.endpoints.web.exposure.include=*
management.endpoint.health.show-details=always

info.app.name=CurrencyConversionService
info.app.description=Handles Currency Conversion amount
info.app.version=1.0.0
info.author=SathyaTech

# ------------------ Spring Boot Admin ------------------
spring.boot.admin.client.url=http://localhost:1111

# ------------------ Distributed Tracing (Zipkin) ------------------
management.tracing.sampling.probability=1.0
management.zipkin.tracing.endpoint=http://localhost:9411/api/v2/spans
